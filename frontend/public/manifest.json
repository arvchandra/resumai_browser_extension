{
  "manifest_version": 3,
  "name": "ResumAI Browser Extension",
  "version": "1.0.0",
  "description": "ResumAI Chrome extension that tailors resumes to job posting on current page.",
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "oauth2": {
    "client_id": "1044667708228-ir1266nf6l06845308efc0uq5dnmpo84.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "host_permissions": ["*://localhost/*"],
  "permissions": ["cookies", "storage", "identity", "scripting", "contextMenus", "tabs"]
}
